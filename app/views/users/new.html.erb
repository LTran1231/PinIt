
<div id="dialog-register", title="Register new user", style="display: none;">

	<%= form_for(:user, url: users_path) do |f| %>
    <div class="sessions-error-messages"></div>

  	<%= f.text_field :name, class: "form-control", placeholder: "Name" %><br/>

  	<%= f.email_field :email, class: "form-control", placeholder: "Email" %><br/>

  	<%= f.password_field :password, class: "form-control", placeholder: "Password" %><br/>

  	<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation" %><br/>

  	<%= f.submit "Create an account", class: "btn btn-primary btn-block" %>
	<% end %>
</div>

