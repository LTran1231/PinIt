<p id="notice"><%= notice %></p>

<div class="wrapper">
  <div class="row pad-top-50px">
  <% @posts.each do |post| %>
    <div class="col-md-4">
        <div class="panel panel-default panel-height">
            <h3 class="text-center"><%= post.title %></h3>

            <div class="panel-body panel-box">
                <%= post.content %>
            </div>
        </div>  
    </div>
  <% end %>
  </div>
</div>

