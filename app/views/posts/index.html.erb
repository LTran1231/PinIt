<p id="notice"><%= notice %></p>

<div class="wrapper">
  <div class="row pad-top-50px">
  <% @posts.each do |post| %>
    <div class="col-md-4">
        <div class="panel panel-default panel-height">
            <h3 class="text-center"><%= post.title %></h3>

            <div class="panel-body panel-ovrflow">
                <%= post.content %>
            </div>
        </div>
    </div>
  <% end %>
  </div>
</div>





<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Location</th>
      <th>Travel date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <% post.locations.each do |location| %>
              <td><%= render "locations/show", location: location %></td>
            <% end %>
        <td><%= post.travel_date %></td>
        <td><%= link_to 'Show', [post.user, post] %></td>
        <td><%= link_to 'Edit', edit_user_post_path(post.user, post) %></td>
        <td><%= link_to 'Destroy', [post.user, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path(current_user) %>
