
<%= form_for([@post.user, @post]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="details">
    <%= f.label :location %><br>
    <%= f.text_field :location, id: "geocomplete", class: "form-control" %>
    <%= f.hidden_field :lat, "data-geo" => "lat", readonly: "readonly" %>
    <%= f.hidden_field :lng, "data-geo" => "lng", readonly: "readonly" %>
    <br>City or Town: <br/>
    <input data-geo="locality", class="form-control", readonly="readonly">
    <br>Country: <br/>
    <input data-geo="country_short", class="form-control", readonly="readonly">
  </div>
  <div class="field">
    <%= f.label :travel_date %><br>
    <%= f.date_select :travel_date, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

