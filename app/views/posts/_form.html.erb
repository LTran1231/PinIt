
<%= form_for([@post.user, @post]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <br><%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <br><%= f.label :content %><br>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="field">
    <br><%= f.label :Locations %><br>
      <%= f.fields_for :locations do |ff| %>
        <div class="location-detail">
          <%= ff.check_box :_destroy %> Delete
          <%= text_field_tag "geocomplete", nil , class: "form-control" %>
          <%= ff.hidden_field :lat, data: { geo: "lat" } %>
          <%= ff.hidden_field :lng, data: { geo: "lng" } %>
          <%= ff.text_field :city, placeholder: "City", data: { geo: "locality" }, class: "form-control", readonly: "readonly" %>
          <%= ff.text_field :country, placeholder: "Country", data: { geo: "country" }, class: "form-control", readonly: "readonly" %>
        </div>
      <% end %>
  </div>

  <div class="field">
    <br><%= f.label :travel_date %><br>
    <%= f.date_select :travel_date, class: "form-control" %>
  </div>
  <div class="actions">
    <br><%= f.submit %>
  </div>

<% end %>

