<div class="post-form">
  <%= form_for([@post.user, @post]) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <br><%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field form-inline">
      <br><%= f.label :travel_date %><br>
      <%= f.date_select :travel_date, {order: [:month, :year]}, {:class=>'form-control'}  %>
    </div>

    <div class="field">
      <br><%= label_tag :pins %><br>
      <div class="added-address"></div>
      <%= text_field_tag :geocomplete, nil, class: "form-control" %>
      <%= f.fields_for :locations do |location| %>
      <div class="location-logger" style=""></div>
      <% end %>
    </div>

    <div class="field">
      <br><%= f.label :content %><br>
      <%= f.text_area :content, class: "form-control summernote-post-editor", cols: "30", rows: "10" %>
    </div>

    <div class="actions">
      <br><%= f.submit "submit", class: "btn btn-default" %>
    </div>

  <% end %>
</div>
