<!DOCTYPE html>
<html>
<head>
  <title>PinIt</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>

	<script src="https://cdn.firebase.com/js/client/2.2.7/firebase.js"></script>
	<script src="https://cdn.firebase.com/libs/geofire/3.2.2/geofire.min.js"></script>

	<script src='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.js'></script>
	<link href='https://api.tiles.mapbox.com/mapbox.js/v2.2.1/mapbox.css' rel='stylesheet' />
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>

	<!-- NICEDIT -->
	<!-- // <script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script> -->

	<!-- NICEDIT -->

	<!-- AUTOCOMPLETE -->
	 <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js" type="text/javascript"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
	<link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.3/themes/flick/jquery-ui.css" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/geocomplete/1.4/jquery.geocomplete.js"></script>
	<!-- AUTOCOMPLETE -->


	<meta charset="UTF-8">
	<meta name="viewport" content="initial-scale=1.0, user-scalable=no">
	<!-- <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' /> -->
	<%= csrf_meta_tags %>

</head>
	<nav class="container">
	  <ul class="nav navbar-nav navbar-left">
			<li><%= link_to 'Home', root_path %></li>
		</ul>
		<ul class="nav navbar-nav navbar-right">
			<% if current_user %>
			<li><a href="#"><span>Hello, <%= current_user.name %></span></a></li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">Profile<b class="caret"></b></a>
				<ul class="dropdown-menu">
					<li><%= link_to 'View my Profile', user_posts_path(current_user) %></li>
		      <li class="edit-profile"><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
		      <li><%= link_to "Settings", '#' %></li>
		      <li class="divider"></li>
		      <li><%= link_to "Log out", logout_path, method: "delete", id: "opener-logout" %></li>
		    </ul>
		  </li>
		  <% else %>
		  <li><%= link_to "Log in", "#", data: { toggle: "modal", target: "#loginModal" } %></li>
			<li><%= link_to 'Signup', new_user_path, id: "opener-register" %></li>
		  <% end %>
		</ul>
	</nav>
<body>
	<div class="container">

		<div id="loginModal", class="modal fade", tabindex="-1", role="dialog", aria-labelledby="myModalLabel">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title" id="myModalLabel">Login</h4>
					</div>
					<div class="modal-body">
						<%= render template: "sessions/new" %>
					</div>
				</div>
			</div>
		</div>
		<%= content_for?(:profile) ? yield(:profile) : yield %>
  </div>
</body>
</html>

