<% content_for :profile do %>
	<div class="container">
		<div class="row pad-top-50px">
			<aside class="col-md-3">
				<%= render template: "users/show" %>
				<% if current_user %>
					<%= link_to "Add a new trip", new_user_post_path(current_user) %>
				<% end %>
			</aside>
			<article class="col-md-9">
				<ul class="nav nav-tabs post-nav">
				  <li role="presentation" class="active"><a href="/users/<%= @user.id %>/posts"><i class="fa fa-list fa-lg"></i></a></li>
				  <li role="presentation"><a href="#"><i class="fa fa-globe fa-lg"></i></a></li>
				  <li role="presentation"><a href="#">Messages</a></li>
				</ul>
				<%= content_for?(:users_content) ? yield(:users_content) : yield %>
			</article>
		</div>
	</div>
<% end %>
<%= render template: "layouts/application" %>	

